{{!--     Description:  Page View for viewing and adding companies      --}}

<title>Add Company</title>
        
{{!-- Container for the dashboard --}}
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Add Company</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm" action="/insertCompany">
            <fieldset>
                <legend>Add a new Company</legend>
        
                <label for="company-name">Company Name</label>
                <input required type="text" name="companyName" id="company-name-field"><br>

                <label for="company-date-joined">Date Joined</label>
                <input class="submitBtn" required type="date" name="dateJoined" id="company-date-joined-field" placeholder="yyyy-mm-dd"><br>

                <input class="submitBtn" type="submit" id="save" value="Add">
                <div id="spinner" class = "mdl-spinner mdl-spinner--single-color mdl-js-spinner is-active"></div>
            </fieldset>
        </form>
    </div>
</div>
<br>

{{!-- Container for Companies Table --}}
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Current Companies</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="recordTable">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">Company Name</th>
                    <th class="mdl-data-table__cell--non-numeric">Date Joined</th>
                </tr>
            </thead>
            <tbody>
                {{#each companies}}
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">{{this.companyName}}</td>
                    <td>{{this.dateJoined}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Client side javascript file --}}
<script src="js/add-company.js"></script>
